

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
 
 
 
 <div class="login-box">
      <div class="login-logo">
        <a href="http://localhost:3000">
			<%= image_tag "logo.png" %> 	
        </a>
      </div><!-- /.login-logo -->
      
      <div class="login-box-body">
		  <p class="login-box-msg">Informe login e senha para iniciar sua sess√£o</p>    
	      <div class="form-group has-feedback">
			  <%= f.input :email, required: true, label: false, wrapper: "inline", input_html: {placeholder: "E-mail"} %>
            <span class="form-control-feedback"><i class="fa fa-envelope"></i></span> 
          </div>
          
          <div class="form-group has-feedback">
			  <%= f.input :password, required: true, label: false, wrapper: "inline", input_html: {placeholder: "Senha"} %>
            <span class="form-control-feedback"><i class="fa fa-key"></i></span> 
          </div>


          <div class="form-group has-feedback">
			<div class="row">
        	<div class="col-xs-12">	 
				<%= f.input :remember_me, label: false,  as: :boolean if devise_mapping.rememberable? %>	
				Lembrar-me
			</div>
			</div>
          </div>
          

          <div class="form-group has-feedback">
		
		  		
          </div>
          
          <div class="row">
            <div class="col-xs-12">
           		 <%= f.button :submit, "Logar", class: "btn btn-primary btn-block btn-flat" %>
            </div><!-- /.col -->
          </div>
          
        <div class="social-auth-links text-center">
          <p></p>
        </div><!-- /.social-auth-links -->
      </div><!-- /.login-box-body -->
    </div>
	  
 
 
<% end %>



