<%= render "shared/row_header", title: "Clientes" %>

<div class="row">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Nome</th>
        <th>CPF</th>
      </tr>
    </thead>

    <tbody>
      <% @clients.each do |client| %>
        <tr>
          <td><%= link_to client.name, client %></td>
          <td><%= client.cpf %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="pagination">
    <% #= will_paginate @clients, renderer: BootstrapPagination::Rails %>
  </div>
</div>
